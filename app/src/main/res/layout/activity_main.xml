<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frame_act"
        android:background="#3315D5FF"


        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/text1"
            android:layout_marginStart="16dp"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toTopOf="@id/frame_act"
            app:layout_constraintStart_toStartOf="@id/frame_act"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:text="Вы прошли:"
            >

        </TextView>
        <TextView
            android:id="@+id/text2"
            app:layout_constraintTop_toBottomOf="@id/text1"
            app:layout_constraintStart_toStartOf="@id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100000 шагов"
            android:textColor="#15B9FF"
            android:textSize="32sp"
            >
        </TextView>
        <TextView
            android:id="@+id/text3"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/text2"
            app:layout_constraintStart_toStartOf="@id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200%"
            android:textSize="14sp"
            android:textColor="#15B9FF"
            >
        </TextView>
        <TextView
            android:id="@+id/text4"
            app:layout_constraintTop_toTopOf="@id/text3"
            app:layout_constraintStart_toEndOf="@id/text3"
            app:layout_constraintBottom_toBottomOf="@id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="от сегодняшней тренировки"
            android:layout_marginStart="5dp"
            android:textSize="14sp"
            android:textColor="#454545"
            >
        </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:alpha="0.25"
            android:background="#000000"
            app:layout_constraintBottom_toTopOf="@id/bottom_stat"
            app:layout_constraintEnd_toEndOf="@id/frame_act"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@id/frame_act">

        </View>
        <Button
            android:id="@+id/bottom_stat"
            android:backgroundTint="#15D5FF"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            app:layout_constraintBottom_toBottomOf="@id/frame_act"
            app:layout_constraintStart_toStartOf="@id/frame_act"
            app:layout_constraintEnd_toEndOf="@id/frame_act"
            android:layout_marginStart="33dp"
            android:layout_marginEnd="73dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintTop_toTopOf="@id/frame_act"
            android:layout_marginTop="126dp"
            android:text="Статистика"
            android:textSize="11dp"
            android:textColor="@color/white"
            >
        </Button>

        <ImageButton
            android:layout_width="26dp"
            android:layout_height="26dp"
            app:layout_constraintStart_toEndOf="@id/bottom_stat"
            app:layout_constraintEnd_toEndOf="@id/frame_act"
            app:layout_constraintTop_toTopOf="@id/bottom_stat"
            app:layout_constraintBottom_toBottomOf="@id/bottom_stat"
            android:background="@drawable/round"
            android:src="@drawable/back"
            android:scaleType="centerInside"
            >
        </ImageButton>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/frame_act"
        app:layout_constraintStart_toStartOf="@id/frame_act"
        app:layout_constraintEnd_toEndOf="@id/frame_act"
        app:layout_constraintBottom_toBottomOf="parent">
    </androidx.recyclerview.widget.RecyclerView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#FFFFFF"
        >
        <ImageButton
            android:id="@+id/friend"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="30dp"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/friend"
            android:scaleType="centerCrop">
        </ImageButton>
        <TextView
            android:id="@+id/text_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/friend"
            app:layout_constraintStart_toStartOf="@id/friend"
            app:layout_constraintEnd_toEndOf="@id/friend"
            android:textColor="#15B9FF"
            android:text="Друзья"
            android:textSize="10sp">
        </TextView>
        <ImageButton
            android:id="@+id/progress"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/friend"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/train"
            android:layout_marginBottom="5dp"
            android:src="@drawable/progress"
            android:scaleType="centerCrop">
        </ImageButton>
        <TextView
            android:id="@+id/text_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/progress"
            app:layout_constraintStart_toStartOf="@id/progress"
            app:layout_constraintEnd_toEndOf="@id/progress"
            android:text="Прогресс"
            android:textSize="11sp">
        </TextView>
        <ImageButton
            android:id="@+id/train"
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/progress"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/profile"
            android:layout_marginBottom="5dp"
            android:background="@color/white"
            android:src="@drawable/train"
            android:scaleType="centerCrop">
        </ImageButton>
        <TextView
            android:id="@+id/text_training"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/train"
            app:layout_constraintStart_toStartOf="@id/train"
            app:layout_constraintEnd_toEndOf="@id/train"
            android:text="Тренировка"
            android:textSize="11sp">
        </TextView>
        <ImageButton
            android:id="@+id/profile"
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/train"
            app:layout_constraintBottom_toBottomOf="@id/text_profile"
            android:layout_marginBottom="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/white"
            android:src="@drawable/profile"
            android:scaleType="centerCrop">
        </ImageButton>
        <TextView
            android:id="@+id/text_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/profile"
            app:layout_constraintStart_toStartOf="@id/profile"
            app:layout_constraintEnd_toEndOf="@id/profile"
            android:text="Профиль"
            android:textSize="11sp">
        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

<!--    android:alpha="0.2"-->